{
	"compilerOptions": {
		"target": "es2021",
		"module": "commonjs",
		"outDir": "dist",
		"rootDir": ".",
		"moduleResolution": "node",
		"strict": true,
		"declaration": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*.ts", "localstack/**/*.ts", "bin/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
